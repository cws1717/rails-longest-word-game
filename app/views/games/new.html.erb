<h2>New Game</h2>

<ul><% @letters.each do |letter| %>
    <li><%=letter.capitalize %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter_field, @letters %>
  <input type="text" name="word" placeholder="Word" id="guess-form">
  <input type="submit">
</form>
